package MissaoS6;

import java.util.Scanner;

public class MissaoS6 {

    public static void main(String[] args) {

        //Inicio de variáveis
        int menu, submenu = 0;
        float tempC, tempF, vReal, vDolar, vCotacao = 0f;

        //Menú Principal
        System.out.println("O que deseja fazer?");
        Scanner leitor = new Scanner(System.in);

        do {
            System.out.println("1. Conversao de Temperatura");
            System.out.println("2. Conversao de Moeda");
            System.out.println("3. Sair");
            System.out.println(" ");

            menu = leitor.nextInt();

            switch (menu) {
                case 1 -> {

                    //Submenú de Conversao de Temperatura    
                    do {
                        System.out.println("Escolha uma opcao, por favor:");
                        System.out.println("1. Conversao Celsius para Fahrenheit");
                        System.out.println("2. Conversao de Fahrenheit para Celsius");
                        System.out.println("3. Voltar ao Menú Principal");
                        System.out.println(" ");
                        submenu = leitor.nextInt();

                        switch (submenu) {
                  
                            case 1: {
                                char resposta = 'S';
                                while (resposta == 's' || resposta == 'S') {
                                    System.out.print("Digite a temperatura em °C :");
                                    tempC = leitor.nextFloat();
                                    tempF = (tempC * 9 / 5) + 32;
                                    System.out.println(" ");
                                    System.out.println("A temperatura em °F é = " 
                                            + String.format("%.2f", tempF));
                                    System.out.println(" ");
                                
                                    if (resposta == 'n' || resposta == 'N') {
                                    break;
                                }
                                
                                }
                            
                  
                                System.out.println("Deseja fazer uma nova conversao? "
                                        + "S - Sim / N - Nao");
                                resposta = leitor.next().charAt(0);
                                System.out.println(" ");
                            }
                        }

                    } while (submenu != 3);

                }

                case 2 ->
                    System.out.println("Entrou no case de Velocidade");

                case 3 ->
                    System.out.println("UsuÃ¡rio quer sair...");

                default ->
                    System.out.println("Opcao invÃ¡lida, tente novamente");

            }

        } while (menu != 3);

    }

}
